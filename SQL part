-- SQL to set up the database and table.
-- You only need to run this code once in your MySQL client.

-- Create the database to store all of your application's data.
CREATE DATABASE worknest_db;

-- Select the newly created database.
USE worknest_db;

-- Create the 'users' table.
CREATE TABLE users (
    id INT AUTO_INCREMENT PRIMARY KEY,
    full_name VARCHAR(255) NOT NULL,
    email VARCHAR(255) NOT NULL UNIQUE,
    password VARCHAR(255) NOT NULL
);
